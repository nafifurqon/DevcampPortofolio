<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |message| %>
      <%= js add_gritter(message, title: "Nafi Furqon Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title'  %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 12, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= f.submit "submit", class: 'btn btn-primary' %>
  </div>
<% end %>
